{
  "name": "@capire/multimodule",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "workspaces": [
    "books",
    "customers",
    "orders"
  ],
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/cds-mtxs": "^1.9",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "build": {
      "tasks": [
        { "for": "hana", "options": { "ws": true } },
        { "for": "mtx-sidecar", "options": { "ws": true } }
      ]
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "url": "../db.sqlite"
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "db": {
          "kind": "hana"
        }
      },
      "auth": "xsuaa",
      "toggles": true,
      "multitenancy": true
    },
    "profile": "with-mtx-sidecar"
  }
}